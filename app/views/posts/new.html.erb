<h1>New Post</h1>

<%= form_for :post, url: posts_path do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :text %><br>
		<%= form.text_area :text %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'See all posts', posts_path %>